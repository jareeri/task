<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- First ImageView -->
    <ImageView
        android:id="@+id/imageViewProject"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/download"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Second ImageView over the bottom border of the first one -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-40dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="40dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProject"
        app:layout_constraintStart_toStartOf="@+id/imageViewProject"
        app:layout_constraintEnd_toEndOf="@+id/imageViewProject">

        <!-- ImageView inside CardView -->
        <ImageView
            android:id="@+id/imageViewOverBottomBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/download"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardVissssew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toTopOf="@+id/mapView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.cardview.widget.CardView>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/mapView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/aboutTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/aboutDescriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cassablanca Ground is located in Malang City which is not far from the city center. This house was made in 2012 with a minimalist and modern architecture suitable for families."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapssView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProject"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/contacts_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textSize="24sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Contact 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardsView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="5dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="40dp"
                            app:layout_constraintTop_toBottomOf="@+id/imageViewProject"
                            app:layout_constraintStart_toStartOf="@+id/imageViewProject"
                            app:layout_constraintEnd_toEndOf="@+id/imageViewProject">

                            <!-- ImageView inside CardView -->
                            <ImageView
                                android:id="@+id/imageViewOverBottomsBorder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/download"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/contact1_names"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Diana Richards"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/contact1_job_titsle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sea Freight Operation"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/contact1_semail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Diana@gmail.com"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@android:color/darker_gray">

                            <ImageButton
                                android:id="@+id/contact1_messssage_bssutton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_comment"
                                android:contentDescription="Contact 1 message icon"
                                android:background="@android:color/darker_gray"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:background="@color/your_background_color"
                                android:text="Message"
                                android:textSize="4dp"
                                android:textColor="@android:color/white"
                                android:stateListAnimator="@null" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@android:color/darker_gray">

                            <ImageButton
                                android:id="@+id/contact1_messssagsse_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone"
                                android:contentDescription="Contact 1 message icon"
                                android:background="@android:color/darker_gray"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:background="@color/your_background_color"
                                android:text="Phone"
                                android:textSize="4dp"
                                android:textColor="@android:color/white"
                                android:stateListAnimator="@null" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Contact 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <!-- Contact 2 Avatar -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardsssView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="5dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="40dp"
                            app:layout_constraintEnd_toEndOf="@+id/imageViewProject"
                            app:layout_constraintStart_toStartOf="@+id/imageViewProject"
                            app:layout_constraintTop_toBottomOf="@+id/imageViewProject">

                            <!-- ImageView inside CardView -->
                            <ImageView
                                android:id="@+id/imageViewOverBottssomsBorder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/download" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Contact 2 Name -->
                            <TextView
                                android:id="@+id/contact2_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="John Doe"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!-- Contact 2 Job Title -->
                            <TextView
                                android:id="@+id/contact2_job_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Software Engineer"
                                android:textSize="14sp" />

                            <!-- Contact 2 Email -->
                            <TextView
                                android:id="@+id/contact2_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="john.doe@gmail.com"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Contact 2 Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Contact 2 Message Button -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/darker_gray"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/contact2_message_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/darker_gray"
                                android:contentDescription="Contact 2 message icon"
                                android:src="@drawable/ic_comment" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:background="@android:color/darker_gray"
                                android:stateListAnimator="@null"
                                android:text="Message"
                                android:textColor="@android:color/white"
                                android:textSize="4dp" />
                        </LinearLayout>

                        <!-- Contact 2 Phone Button -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/darker_gray"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/contact2_phone_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/darker_gray"
                                android:contentDescription="Contact 2 phone icon"
                                android:src="@drawable/phone" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:background="@android:color/darker_gray"
                                android:stateListAnimator="@null"
                                android:text="Phone"
                                android:textColor="@android:color/white"
                                android:textSize="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- Add more LinearLayouts for additional contacts if needed -->
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
